<%- include('includes/head') %>
<%- include('includes/navbar') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center">Login/ register</h1>
      <p class="text-center lead">Login or create a new account below</p>

      <%- include('includes/messages.ejs') %>

      <div class="row">

        <div class="col-lg my-5">
          <h4>Register</h4>
          <p>If you don't have an account yet, fil the form below:</p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Your e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Your senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark my-3">Register</button>
          </form>

        </div>

        <div class="col-lg my-5">
          <h4>Login</h4>

          <p>If you already have an account, fill the form below:</p>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Your e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Your senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark my-3">Login</button>
          </form>

          
        </div>

      </div>
      
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>